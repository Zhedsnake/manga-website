{
  "compilerOptions": {
    "target": "es2016",
    "lib": ["DOM",],  
    "module": "commonjs",
    "outDir": "./build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,

    
    "rootDir": "./src",
    "moduleResolution": "node",
    "checkJs": true,
    "noImplicitAny": true,
  },


  "exclude": ["./coverage", "./build", "__tests__", "jest.config.ts"],
  "ts-node": {
    "transpileOnly": true,
    "files": true
  },
}
